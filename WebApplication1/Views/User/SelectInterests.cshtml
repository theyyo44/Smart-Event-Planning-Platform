@model IEnumerable<WebApplication1.Models.Kategori>

@{
    Layout = null;
    ViewData["Title"] = "İlgi Alanlarını Seçin";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bokor&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style3.css">
</head>




<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="selection-container">
        <h2 class="text-center mb-4">İlgi Alanlarınız</h2>
        <form method="post" asp-action="SaveInterests" asp-controller="User">
            <div class="row justify-content-center">
                <!-- 1. Satır -->
                <div class="d-flex flex-row justify-content-center">
                    @for (int i = 0; i < 6 && i < Model.Count(); i++)
                    {
                        <div class="interest-card">
                            <input type="checkbox" id="kategori-@Model.ElementAt(i).Id" name="selectedCategories" value="@Model.ElementAt(i).Id" class="d-none">
                            <label for="kategori-@Model.ElementAt(i).Id" class="interest-label">@Model.ElementAt(i).Name</label>
                        </div>
                    }
                </div>

                <!-- 2. Satır -->
                <div class="d-flex flex-row justify-content-center">
                    @for (int i = 6; i < 11 && i < Model.Count(); i++)
                    {
                        <div class="interest-card">
                            <input type="checkbox" id="kategori-@Model.ElementAt(i).Id" name="selectedCategories" value="@Model.ElementAt(i).Id" class="d-none">
                            <label for="kategori-@Model.ElementAt(i).Id" class="interest-label">@Model.ElementAt(i).Name</label>
                        </div>
                    }
                </div>

                <!-- 3. Satır -->
                <div class="d-flex flex-row justify-content-center">
                    @for (int i = 11; i < 15 && i < Model.Count(); i++)
                    {
                        <div class="interest-card">
                            <input type="checkbox" id="kategori-@Model.ElementAt(i).Id" name="selectedCategories" value="@Model.ElementAt(i).Id" class="d-none">
                            <label for="kategori-@Model.ElementAt(i).Id" class="interest-label">@Model.ElementAt(i).Name</label>
                        </div>
                    }
                </div>

                <!-- 4. Satır -->
                <div class="d-flex flex-row justify-content-center">
                    @for (int i = 15; i < 18 && i < Model.Count(); i++)
                    {
                        <div class="interest-card">
                            <input type="checkbox" id="kategori-@Model.ElementAt(i).Id" name="selectedCategories" value="@Model.ElementAt(i).Id" class="d-none">
                            <label for="kategori-@Model.ElementAt(i).Id" class="interest-label">@Model.ElementAt(i).Name</label>
                        </div>
                    }
                </div>

                <!-- 5. Satır -->
                <div class="d-flex flex-row justify-content-center">
                    @for (int i = 18; i < 20 && i < Model.Count(); i++)
                    {
                        <div class="interest-card">
                            <input type="checkbox" id="kategori-@Model.ElementAt(i).Id" name="selectedCategories" value="@Model.ElementAt(i).Id" class="d-none">
                            <label for="kategori-@Model.ElementAt(i).Id" class="interest-label">@Model.ElementAt(i).Name</label>
                        </div>
                    }
                </div>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-5">Kaydet</button>
            </div>
        </form>
    </div>
</div>
