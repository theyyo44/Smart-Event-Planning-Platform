@model WebApplication1.Models.Kullanici

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
    var totalScore = ViewData["TotalScore"] ?? 0;
}
<style>
    .profile-picture-container {
        padding: 10px;
        border: 2px solid #ddd;
        border-radius: 50%;
        display: inline-block;
    }
</style>

<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bokor&family=Itim&family=Protest+Revolution&display=swap" rel="stylesheet">
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  
    <link rel="stylesheet" href="~/css/style4.css">
</head>
<div class="container mt-5">
   
    <div class="row">
        <!-- Sol Kısım: Profil Resmi ve Puan -->
        <div class="col-md-4 text-center">
            <div class="profile-picture-container mb-4">
                <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : "~/images/default-profile.jpg")"
                     alt="Profil Resmi" class="img-fluid rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
            </div>
            <h3>@Model.FirstName @Model.LastName</h3>
            <p class="text-muted">Toplam Puan: <strong>@totalScore</strong></p>
        </div>

        <!-- Sağ Kısım: Bilgi Güncelleme -->
        <div class="col-md-8">
            <h4>Profil Bilgilerini Güncelle</h4>
            <form method="post" action="/User/UpdateProfile" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="FirstName" class="form-label">Ad</label>
                    <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName" required>
                </div>
                <div class="mb-3">
                    <label for="LastName" class="form-label">Soyad</label>
                    <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName" required>
                </div>
                <div class="mb-3">
                    <label for="BirthDate" class="form-label">Doğum Tarihi</label>
                    <input type="date" id="BirthDate" name="BirthDate" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")" required>
                </div>
                <div class="mb-3">
                    <label for="Gender" class="form-label">Cinsiyet</label>
                    <input type="text" id="Gender" name="Gender" class="form-control" value="@Model.Gender" required>
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label">Telefon Numarası</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                </div>
                <div class="mb-3">
                    <label for="Location" class="form-label">Konum</label>
                    <input type="text" id="Location" name="Location" class="form-control" value="@Model.Location">
                </div>
                <div class="mb-3">
                    <label for="ProfilePicture" class="form-label">Profil Resmi URL</label>
                    <input type="file" class="form-control" id="profileImage" name="profileImage"> <!-- Resim yükleme -->
                    
                </div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>
